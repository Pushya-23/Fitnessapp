<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/muscle"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/muscleActivationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muscle Activation"
        android:textColor="#0DF404"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/muscleStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Muscle Activation Status: Not Activated"
        android:textSize="24sp"
        android:layout_marginTop="30dp"
        android:textColor="@color/white"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/muscleActivationTitle"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText,VisualLintBounds" />

    <TextView
        android:id="@+id/timerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Activation Time: 00:00"
        android:textSize="18sp"
        android:textColor="@color/white"

        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/muscleStatusText"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/startActivationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Activation"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/timerText"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/endActivationButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="End Activation"
        android:textSize="18sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/startActivationButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/lastActivationTimeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Last Activation: Not Recorded"
        android:textSize="18sp"
        android:textColor="@color/white"

        android:layout_marginTop="50dp"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toBottomOf="@id/endActivationButton"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
